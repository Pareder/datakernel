<div class="row align-items-center">
    <div class="col-10 mr-n2">
        <div id="thread-title"
             class="form-control font-weight-bold text-dark px-2 m-0 text-truncate unselectable"
             style="border: 1px solid transparent; background: transparent;">
            {{thread.title}}
        </div>
        <form class="validate" action="#" novalidate>
            <input id="thread-title-input"
                   class="form-control font-weight-bold m-0 p-2 pr-5 d-none"
                   type="text"
                   required pattern="\s*(?=\S).{1,120}\s*">
        </form>
    </div>

    {{#thread.root.editable}}
        <div class="col-2 mr-2 text-truncate">
            <div class="row">
                <div class="col px-1 my-1">
                    <button id="edit-thread"
                            class="btn btn-sm btn-block btn-outline-primary">
                        rename
                    </button>
                    <button id="edit-thread-cancel"
                            class="btn btn-sm btn-block btn-outline-primary d-none mt-0">
                        cancel
                    </button>
                </div>
                <div class="col px-1 my-1">
                    <button id="delete-thread"
                            class="btn btn-sm btn-block btn-outline-danger"
                            data-toggle="modal"
                            data-target="#delete-modal">
                        delete
                    </button>
                    <button id="edit-thread-save"
                            class="btn btn-sm btn-block btn-primary d-none mt-0"
                            data-thread-id="{{thread.threadId}}">
                        save
                    </button>
                </div>
            </div>
        </div>
        <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirmation</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this thread?
                        <br>
                        This action cannot be undone.
                    </div>
                    <div class="modal-footer">
                        <button type="button"
                                class="btn btn-outline-primary"
                                data-dismiss="modal">
                            Cancel
                        </button>
                        <button id="delete-thread-confirm"
                                class="btn btn-danger"
                                data-thread-id="{{thread.threadId}}">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {{/thread.root.editable}}
</div>
