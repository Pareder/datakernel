<div class="card no-gutters" id="post_{{postId}}"
     {{#inlineParent}}data-inline-parent="#post_{{postId}}"{{/inlineParent}}>
    <div class="card-body py-1">
        <div class="row mb-2">
            <div class="col pl-0">
                <a href="/{{thread.threadId}}/{{postId}}{{^postId}}root{{/postId}}"
                   class="badge badge-secondary">#</a>

                <span class="badge badge-primary badge-light text-wrap text-break ml-1">
                    {{#user.role.privileged}}
                        {{#author}}
                            <a href="/profile/{{userId}}" class="text-dark">{{.}}</a>
                        {{/author}}
                    {{/user.role.privileged}}
                    {{^user.role.privileged}}
                        {{author}}
                    {{/user.role.privileged}}
                    {{^author}}<i>ghost</i>{{/author}}
                </span>

                <span class="badge badge-primary badge-light">
                    {{initialTimestamp}}
                </span>
            </div>

            {{^deletedBy}}
                {{#lastEditTimestamp}}
                    <div class="col-auto small px-0 mx-1">
                        <i>edited at: <b>{{.}}</b></i>
                    </div>
                {{/lastEditTimestamp}}
            {{/deletedBy}}
            {{#deletedBy}}
                <div class="col-auto small px-0 mx-1">
                    <i>deleted by: <b>{{.}}</b></i>
                </div>
            {{/deletedBy}}
        </div>
