            <div class="col">
                {{#inlineParent}}
                    <div class="row">
                        <div class="col-auto ml-n2 small font-weight-bold">
                            Replying to:&nbsp;<span class="link-like stretched-link"
                                                    data-post-reference="#post_{{postId}}">{{author}}</span>
                        </div>
                    </div>
                {{/inlineParent}}
                <div class="row text-wrap text-break mr-2{{#deletedBy}} text-secondary{{/deletedBy}}">
                    {{#deletedBy}}
                    <details>
                        <summary class="px-2">show</summary>
                    {{/deletedBy}}

                    <p id="content_{{postId}}" class="multiline m-0 p-2"
                       style="border: 1px solid transparent">{{content}}</p>

                    {{#deletedBy}}
                    </details>
                    {{/deletedBy}}
                </div>
            </div>
        </div>
        {{#deletedBy}}
        <div class="row">
        <details>
            <summary class="my-1 px-2 text-secondary">attachments</summary>
        {{/deletedBy}}

        {{#hasAttachments}}
            <div id="attachments_{{postId}}">
                <div class="row m-2">
                    <ul class="list-group col-auto">
                        {{#attachments.image}}
                            <li class="list-group-item list-group-item-action text-truncate unselectable pointer"
                                data-image-modal="/{{thread.threadId}}/{{postId}}/download/{{.}}?inline">
                                <div class="row clickthrough">
                                    <i class="col-1 fa fa-2x fa-file-image clickthrough"></i>
                                    <span class="col align-self-center clickthrough">{{.}}</span>
                                    <a href="/{{thread.threadId}}/{{postId}}/download/{{.}}"
                                       class="col-auto align-self-center" style="pointer-events: auto">ðŸ ‹</a>
                                </div>
                            </li>
                        {{/attachments.image}}
                        {{#attachments.video}}
                            <li class="list-group-item list-group-item-action text-truncate unselectable pointer"
                                data-video-modal="/{{thread.threadId}}/{{postId}}/download/{{.}}">
                                <div class="row clickthrough">
                                    <i class="col-1 fa fa-2x fa-file-video clickthrough"></i>
                                    <span class="col align-self-center clickthrough">{{.}}</span>
                                    <a href="/{{thread.threadId}}/{{postId}}/download/{{.}}"
                                       class="col-auto align-self-center" style="pointer-events: auto">ðŸ ‹</a>
                                </div>
                            </li>
                        {{/attachments.video}}
                        {{#attachments.document}}
                            <li class="list-group-item list-group-item-action text-truncate">
                                <div class="row">
                                    <i class="col-1 fa fa-2x fa-file"></i>
                                    <span class="col align-self-center">{{.}}</span>
                                    <a href="/{{thread.threadId}}/{{postId}}/download/{{.}}"
                                       class="col-auto align-self-center stretched-link position-static">ðŸ ‹</a>
                                </div>
                            </li>
                        {{/attachments.document}}
                    </ul>
                </div>
            </div>
        {{/hasAttachments}}

        <div id="edit_attachments_{{postId}}" class="d-none m-3">
            {{#hasAttachments}}
                <div class="row">
                    <h5>Attachments to delete:</h5>
                </div>
                <div class="row m-2">
                    <ul class="list-group col-auto">
                        {{#attachments.image}}
                            <label class="list-group-item list-group-item-action d-flex unselectable">
                                <span class="mr-1 text-truncate">{{.}}</span>
                                <input type="checkbox" class="cross align-self-center ml-auto">
                            </label>
                        {{/attachments.image}}
                        {{#attachments.video}}
                            <label class="list-group-item list-group-item-action d-flex unselectable">
                                <span class="mr-1 text-truncate">{{.}}</span>
                                <input type="checkbox" class="cross align-self-center ml-auto">
                            </label>
                        {{/attachments.video}}
                        {{#attachments.document}}
                            <label class="list-group-item list-group-item-action d-flex unselectable">
                                <span class="mr-3 text-truncate">{{.}}</span>
                                <input type="checkbox" class="cross align-self-center ml-auto">
                            </label>
                        {{/attachments.document}}
                    </ul>
                </div>
            {{/hasAttachments}}
        </div>

        {{#deletedBy}}
        </details>
        </div>
        {{/deletedBy}}
        <div class="row">
            {{#user}}
                <div class="col-auto align-self-center">
                    <div class="row justify-content-center {{#liked}} liked{{/liked}}{{#disliked}} disliked{{/disliked}}"
                         data-prefix="/{{thread.threadId}}/{{postId}}"
                         style="width: 64px">
                        <div class="like">
                            <i class="fa fa-angle-up"></i>
                        </div>
                        <div class="rating">{{likes}}</div>
                        <div class="dislike">
                            <i class="fa fa-angle-down"></i>
                        </div>
                    </div>
                </div>
            {{/user}}
            <div class="col"></div>
            <div class="col-auto mx-2 mb-2">
                <div class="row">
                    {{#deletedBy}}{{#editable}}
                        <button class="btn btn-outline-primary btn-sm"
                                data-post="#post_{{postId}}"
                                data-post-reply="/{{thread.threadId}}/{{postId}}/restore">
                            restore
                        </button>
                    {{/editable}}{{/deletedBy}}
                    {{^deletedBy}}
                        {{#user}}
                            {{#editable}}
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle mx-1"
                                            type="button"
                                            id="change_menu_{{postId}}"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        change
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="change_menu_{{postId}}">
                                        <button class="dropdown-item edit-button"
                                                data-post-id="{{postId}}"
                                                data-thread-id="{{thread.threadId}}">
                                            edit
                                        </button>
                                        <button class="dropdown-item"
                                                data-post="#post_{{postId}}"
                                                data-post-reply="/{{thread.threadId}}/{{postId}}/delete">
                                            delete
                                        </button>
                                    </div>
                                </div>
                            {{/editable}}
                            {{#user.role.known}}
                                <button class="btn btn-outline-primary btn-sm" data-toggle="collapse"
                                        data-target="#reply_{{postId}}">
                                    reply
                                </button>
                            {{/user.role.known}}
                        {{/user}}
                    {{/deletedBy}}
                </div>
            </div>
        </div>
    </div>
</div>
