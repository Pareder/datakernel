{{<base}}
    {{$content}}
        <div class="container">

            <div class="card">
                <div class="card-header text-center font-weight-bold">Profile:</div>
                <div class="card-body">
                    <form class="m-2" action="/profile/{{shownUser.id}}" method="post">
                        <div class="form-group row">
                            <div class="col-sm-2 col-form-label">Username</div>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="username"
                                       placeholder="Username"
                                       value="{{shownUser.name}}">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 col-form-label">Email</div>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="email" placeholder="Email"
                                       value="{{shownUser.email}}">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 col-form-label">Real name</div>
                            <div class="col col-sm-5">
                                <input class="form-control" type="text" name="first_name" placeholder="First name"
                                       value="{{shownUser.firstName}}">
                            </div>
                            <div class="col col-sm-5">
                                <input class="form-control" type="text" name="last_name" placeholder="Last name"
                                       value="{{shownUser.lastName}}">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 col-form-label">User ID</div>
                            <div class="col-sm-10 align-self-center">
                                <input type="text" readonly class="form-control-plaintext small text-center autocopy"
                                       value="{{shownUser.id}}">
                            </div>
                        </div>

                        <div class="row">
                            <button class="btn btn-lg btn-primary mx-auto" type="submit">Save</button>
                        </div>
                    </form>
                </div>
            </div>
            {{#user.banState}}
                <div class="row">
                    Ban state:
                </div>
                <div class="row">
                    until: {{until}}
                </div>
                <div class="row">
                    reason: {{reason}}
                </div>
            {{/user.banState}}
        </div>
    {{/content}}
{{/base}}
